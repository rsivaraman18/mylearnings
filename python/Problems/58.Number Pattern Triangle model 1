
def model2(n):
    print('triangle Model 2')
    for row in range(n+1,1,-1):
        for col in range(1,row):
            print(col,end='')
        print()
    print('**************')
 
 
 
def model3(n):
    print('Triangle Model 3')
    for row in range(n,0,-1):
        for col in range(1,row+1):
            print(row,end='')
        print()
    print('*****************')



def model5(n):
    print('triangle vera Model 5')
    for row in range(1,n+1):
        for col in range(1,row+1):
            print(row,end='')
        print()
    print('*************')


