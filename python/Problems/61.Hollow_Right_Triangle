def RHT1(n):
    for i in range(1,n+1):
        if i==1:
            print('*')
        elif (i==n):
            print('*'*i)
        else:
            print('*' + ' '*(i-2) + '*')


def RHT2(n):
    for i in range(n,0,-1):
        if i==1:
            print('*')
        elif (i==n):
            print('*'*i)
        else:
            print('*' + ' '*(i-2) + '*')


def RHT3(n):
    for i in range(1,n+1):
        if i==1:
            print(' '*(n-1)+'*')
        elif (i==n):
            print('*'*i)
        else:
            print( ' '*(n-i)  +'*' + ' '*(i-2) + '*')

